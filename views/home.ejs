<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horizon - Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <span style="color: var(--ios-blue);">‚óè</span> HORIZON
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarUser">
                <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarUser">
                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <% if (user) { %>
                        <li class="nav-item">
                            <span class="text-white-50 small text-uppercase ls-1">Welcome, <%= user.full_name %></span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-space rounded-pill px-4" href="/dashboard?uid=<%= user.user_id %>">My Trips</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-outline-danger rounded-pill px-4" href="/logout">Log Out</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item"><a class="btn btn-sm btn-primary rounded-pill" href="/login">Log In</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="padding-top: 120px; padding-bottom: 50px;">
        <div class="row w-100 justify-content-center">
            <div class="col-lg-10 text-center">
                
                <div class="mb-5">
                    <span class="badge bg-white bg-opacity-10 text-white rounded-pill px-3 py-2 mb-3 border border-light">READY FOR TAKEOFF</span>
                    <h1 class="display-title">Where to next, <%= user ? user.full_name.split(' ')[0] : 'Traveler' %>?</h1>
                </div>

                <div class="glass-panel p-4 mx-auto mb-5 text-start" style="max-width: 900px;">
                    <form action="/search" method="POST">
                        <% if (user) { %>
                            <input type="hidden" name="user_id" value="<%= user.user_id %>">
                        <% } %>

                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label">From</label>
                                <div class="position-relative">
                                    <select name="source" class="form-select form-select-lg ps-5" required>
                                        <option value="" selected disabled>Select Origin</option>
                                        <% if (airports) { %>
                                            <% airports.forEach(airport => { %>
                                                <option value="<%= airport.airport_id %>"><%= airport.city %> (<%= airport.airport_code %>)</option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                    <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-white-50">üõ´</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">To</label>
                                <div class="position-relative">
                                    <select name="destination" class="form-select form-select-lg ps-5" required>
                                        <option value="" selected disabled>Select Destination</option>
                                        <% if (airports) { %>
                                            <% airports.forEach(airport => { %>
                                                <option value="<%= airport.airport_id %>"><%= airport.city %> (<%= airport.airport_code %>)</option>
                                            <% }); %>
                                        <% } %>
                                    </select>
                                    <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-white-50">üõ¨</span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Date</label>
                                <input type="date" name="date" class="form-control form-control-lg" required min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100 h-100 rounded-pill">Search</button>
                            </div>
                        </div>
                    </form>
                </div>

                <% if (typeof upcomingFlights !== 'undefined' && upcomingFlights.length > 0) { %>
                    <div class="text-start mt-5">
                        <h4 class="text-white mb-4 ms-2">Recommended Flights</h4>
                        <div class="row g-4">
                            <% upcomingFlights.forEach(flight => { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="glass-panel p-4 h-100 d-flex flex-column align-items-start text-start">
                                        <div class="d-flex justify-content-between w-100 mb-3">
                                            <span class="badge bg-white bg-opacity-10 text-white fw-normal"><%= flight.flight_number %></span>
                                            <span class="text-success fw-bold">$<%= flight.base_fare %></span>
                                        </div>
                                        <div class="d-flex align-items-center gap-3 mb-2 w-100">
                                            <h3 class="mb-0 text-white"><%= flight.source_code %></h3>
                                            <div class="flex-grow-1 border-top border-secondary border-opacity-50"></div>
                                            <h3 class="mb-0 text-white"><%= flight.dest_code %></h3>
                                        </div>
                                        <div class="d-flex justify-content-between w-100 text-white-50 small mb-4">
                                            <span><%= flight.source_city %></span>
                                            <span><%= flight.dest_city %></span>
                                        </div>
                                        <div class="mt-auto w-100">
                                            <div class="d-flex justify-content-between align-items-center mb-3 text-white-50 small">
                                                <span><%= new Date(flight.departure_time).toLocaleDateString() %></span>
                                                <span><%= new Date(flight.departure_time).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) %></span>
                                            </div>
                                            <a href="/book/<%= flight.flight_id %><%= user ? '?uid=' + user.user_id : '' %>" class="btn btn-space w-100 rounded-pill btn-sm">Book This Flight</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>