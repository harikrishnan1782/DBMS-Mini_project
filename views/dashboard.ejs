<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">HORIZON</a>
            <div class="ms-auto">
                <a href="/logout" class="btn btn-sm btn-outline-danger rounded-pill px-3">Log Out</a>
            </div>
        </div>
    </nav>

    <div class="container" style="padding-top: 100px;">
        <h2 class="mb-4">My Trips</h2>

        <% if (bookings && bookings.length > 0) { %>
            <div class="row g-4">
                <% bookings.forEach(booking => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="glass-panel p-0 h-100 d-flex flex-column">
                        <div class="p-4 border-bottom border-light">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h3 class="mb-0"><%= booking.source_code %></h3>
                                <div class="text-white-50">âœˆ</div>
                                <h3 class="mb-0"><%= booking.dest_code %></h3>
                            </div>
                            <div class="d-flex justify-content-between text-white-50 small">
                                <span><%= booking.source_city %></span>
                                <span><%= booking.dest_city %></span>
                            </div>
                        </div>

                        <div class="p-4 flex-grow-1">
                            <div class="row g-3 mb-3">
                                <div class="col-6">
                                    <small class="text-white-50 d-block text-uppercase" style="font-size: 0.7rem;">Date</small>
                                    <span class="fw-bold"><%= new Date(booking.departure_time).toLocaleDateString() %></span>
                                </div>
                                <div class="col-6">
                                    <small class="text-white-50 d-block text-uppercase" style="font-size: 0.7rem;">Flight</small>
                                    <span class="fw-bold"><%= booking.flight_number %></span>
                                </div>
                                <div class="col-6">
                                    <small class="text-white-50 d-block text-uppercase" style="font-size: 0.7rem;">Status</small>
                                    <% if (booking.booking_status === 'confirmed') { %>
                                        <span class="badge-confirmed">Active</span>
                                    <% } else { %>
                                        <span class="badge-cancelled">Cancelled</span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="p-3 bg-white bg-opacity-10 d-flex gap-2">
                            <% if (booking.booking_status === 'confirmed') { %>
                                <a href="/ticket/<%= booking.booking_id %>" class="btn btn-primary btn-sm rounded-pill flex-grow-1">Ticket</a>
                                <form action="/cancel/<%= booking.booking_id %>" method="POST" onsubmit="return confirm('Cancel this booking?')">
                                    <button class="btn btn-outline-light btn-sm rounded-pill px-3">Cancel</button>
                                </form>
                            <% } else { %>
                                <button class="btn btn-secondary btn-sm rounded-pill w-100" disabled>Archived</button>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="glass-panel text-center p-5">
                <h3 class="text-white-50">No upcoming trips.</h3>
                <a href="/" class="btn btn-primary rounded-pill mt-3 px-4">Book a Flight</a>
            </div>
        <% } %>
    </div>
</body>
</html>