<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Select Flight - Horizon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <span style="color: var(--ios-blue);">●</span> HORIZON
            </a>
        </div>
    </nav>

    <div class="container" style="padding-top: 100px;">
        <div class="text-center mb-5">
            <h2 class="mb-2">Available Flights</h2>
            <p class="text-white-50">
                <%= source.city %> (<%= source.airport_code %>) ➝ <%= destination.city %> (<%= destination.airport_code %>)
                <br>
                <span style="color: var(--ios-blue);"><%= travel_date %></span>
            </p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <% if (flights && flights.length > 0) { %>
                    <% flights.forEach(flight => { %>
                    <div class="glass-panel mb-4 p-4 d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div class="text-center text-md-start">
                            <h4 class="mb-1"><%= flight.flight_number %></h4>
                            <div class="text-white-50 small mb-1"><%= flight.model %></div>
                            <div class="d-flex align-items-center gap-2 text-white-50 small">
                                <span><%= new Date(flight.departure_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                                <span style="opacity: 0.3;">————</span>
                                <span><%= new Date(flight.arrival_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                            </div>
                        </div>

                        <div class="text-center text-md-end d-flex align-items-center gap-4">
                            <div>
                                <div class="text-white-50 small mb-1">ECONOMY</div>
                                <h3 class="mb-0" style="color: var(--ios-green);">$<%= flight.base_fare %></h3>
                            </div>
                            <a href="/book/<%= flight.flight_id %><%= (typeof userId !== 'undefined' && userId) ? '?uid=' + userId : '' %>" class="btn btn-space rounded-pill px-4">Select</a>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="glass-panel text-center p-5">
                        <h4 class="text-white-50">No flights found for this date.</h4>
                        <a href="/" class="btn btn-outline-light mt-3 rounded-pill">Try Another Date</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>